<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/btn_payne"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:id="@+id/btn_payne" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp"/>
    <Button
            android:text="@string/btn_stables"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:id="@+id/btn_stables" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"/>

</android.support.constraint.ConstraintLayout>